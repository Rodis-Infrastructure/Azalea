generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["darwin-arm64", "darwin"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ModerationRequest {
  id         String   @id
  author_id  String
  target_id  String
  guild_id   String
  reason     String
  type       String
  status     String   @default("pending")
  created_at DateTime @default(now())
  /// ID of the auto-mute infraction
  mute_id    Int?
  duration   Int?
}

model Message {
  id           String   @id
  author_id    String
  channel_id   String
  guild_id     String
  created_at   DateTime
  deleted      Boolean  @default(false)
  content      String?
  sticker_id   String?
  /// ID of the message this message is replying to
  reference_id String?
}

model Infraction {
  id                Int       @id @default(autoincrement())
  action            Int
  flag              Int       @default(0)
  guild_id          String
  executor_id       String
  target_id         String
  created_at        DateTime  @default(now())
  reason            String?
  request_author_id String?
  expires_at        DateTime?
  updated_at        DateTime?
  updated_by        String?
  archived_at       DateTime?
  archived_by       String?
}

model MessageReport {
  id              String   @id
  message_id      String   @unique
  channel_id      String
  author_id       String
  reported_by     String
  created_at      DateTime @default(now())
  status          String   @default("unresolved")
  flags           Int
  message_deleted Boolean  @default(false)
  /// ID of the user that resolved the report
  resolved_by     String?
  content         String?
}

model UserReport {
  id          String   @id
  target_id   String
  guild_id    String
  reported_by String
  created_at  DateTime @default(now())
  status      String   @default("unresolved")
  reason      String
  /// ID of the user that resolved the report
  resolved_by String?
}

model TemporaryRole {
  member_id  String
  role_id    String
  guild_id   String
  expires_at DateTime

  @@id([member_id, role_id])
}

model Reminder {
  id         String   @id @default(uuid())
  author_id  String
  channel_id String
  reminder   String
  created_at DateTime @default(now())
  expires_at DateTime
}