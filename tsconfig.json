{
  "compilerOptions": {
	"lib": ["ESNext"],
	"module": "ESNext",
	"target": "ESNext",
	"baseUrl": ".",
	"moduleResolution": "bundler",
	"moduleDetection": "force",
	"noEmit": true,
	"composite": true,
	"strict": true,
	"downlevelIteration": true,
	"skipLibCheck": true,
	"allowSyntheticDefaultImports": true,
	"forceConsistentCasingInFileNames": true,
	"types": ["bun-types"],
	"paths": {
	  "@/*": ["./src/*"],
	  "@utils/*": ["./src/utils/*"],
	  "@managers/*": ["./src/managers/*"]
	}
  },
  "include": [
	"./data/**/*.json",
	"./src/**/*",
	"./tests/**/*"
  ]
}